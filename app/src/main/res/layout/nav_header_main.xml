<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="bottom"
    android:orientation="vertical"
    android:paddingStart="@dimen/nav_header_padding_dimen"
    android:paddingTop="@dimen/nav_header_padding_dimen"
    android:paddingEnd="@dimen/nav_header_padding_dimen"
    android:paddingBottom="@dimen/nav_header_padding_dimen"
    android:theme="@style/ThemeOverlay.AppCompat.Dark">

    <ImageView
        android:id="@+id/user_avatar_image_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:paddingTop="@dimen/nav_header_padding_dimen"
        app:srcCompat="@drawable/user_icon" />

    <TextView
        android:id="@+id/user_name_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/username"
        android:textColor="@color/black"
        android:textSize="@dimen/nav_header_username_text_size" />

    <TextView
        android:id="@+id/user_email_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/user_email"
        android:textColor="@color/black"
        android:textSize="@dimen/nav_header_user_email_text_size" />

</LinearLayout>